@model IEnumerable<EcommerceProject.Models.ProductAdd>

@{
    ViewData["Title"] = "Index";
}
  <h5 class="text-center">Shop Now </h5>
<hr />
@{
   
    <div class="row">
    <div class="col-4">

            <form asp-controller="Product" asp-action="GetproductByType" class="mb-5 ms-5">

                Select Category : <select class="form-select form-constrol-sm" id="sel1" name="category">

                @for (int i = 0; i < 1; i++)
                {
                    var item1 = Model.FirstOrDefault();

                    var item2 = item1.prodtype;

                    for (int j = 0; j < item2.Count(); j++)
                    {
                        <option>@item2[j].ProductType</option>

                    }

                }


            </select>


            <button type="submit" class="btn btn-primary mt-3">Search</button>

        </form>

    </div>
    <div class="col-4"></div>
    <div class="col-4"></div>
    </div>
  

    @foreach (var item in Model)
{
    string descrip = item.Description;
    string[] des = descrip.Split(".");
   
    string d1 = des[0];
    string d2 = des[1];
    string d3 = des[2];

    string str = item.ImageUrl;
    string[] strs = str.Split(",");
    string imgs = strs[0];

    <hr />
    <div class="row">
            <div class="col-2"></div>
            <div class="col-2">
                <img src="@imgs" alt="book images" class="mt-2 mb-2 ms-5 x-5" width="150" height="200">
            </div>
            <div class="col-4">
                <h5>@item.ProductName</h5>
                 <ul>
                     <li>@d1</li>
                     <li>@d2</li>
                     <li>@d3</li>
                 </ul>
                <span class="badge bg-warning text-dark">  <h-5><strong>Rs</strong> : @item.Price -/ </h-5> </span>
            </div>
            <div class="col-3">

                        @Html.ActionLink("View Details", "Details", new {  id=item.Id },new{@class="btn btn-primary mx-1 my-5", @style="float left"})
                @Html.ActionLink("Add To Cart", "AddToCart","Cart", new {  productsid=item.Id },new{@class="btn btn-info mx-1 my-5",@style="float: left;"})
            </div>
            <div class="col-1"></div>
    </div>
    <hr />
}

}
  