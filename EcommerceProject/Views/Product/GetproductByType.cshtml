@model IEnumerable<EcommerceProject.Models.ProductAdd>

@{
    ViewData["Title"] = "GetproductByType";
}


@{

    <div class="row">
        <div class="col-4">

            <form asp-controller="Product" asp-action="GetproductBySearchText" class="mb-5 ms-5">
           
                      <label for="SearchText" class="">Search : </label>
                      <input class="" type="text" id="SearchText" name="SearchText" placeholder="Enter Search Text">                    

                      <button type="submit" class="btn btn-primary ">Search</button>
        
            </form>

        </div>
        <div class="col-4"></div>
        <div class="col-4"></div>
    </div>


    @foreach (var item in Model)
    {
        string descrip = item.Description;
        string[] des = descrip.Split(".");

        string d1 = des[0];
        string d2 = des[1];
        string d3 = des[2];

        string str = item.ImageUrl;
        string[] strs = str.Split(",");
        string imgs = strs[0];

        <hr />
        <div class="row">
            <div class="col-2"></div>
            <div class="col-2">
                <img src="@imgs" alt="book images" class="mt-2 mb-2 ms-5 x-5" width="150" height="200">
            </div>
            <div class="col-4">
                <h5>@item.ProductName</h5>
                <ul>
                    <li>@d1</li>
                    <li>@d2</li>
                    <li>@d3</li>
                </ul>
                <span class="badge bg-warning text-dark">  <h-5><strong>Rs</strong> : @item.Price -/ </h-5> </span>
            </div>
            <div class="col-3">

                @Html.ActionLink("View Details", "Details", new {  id=item.Id },new{@class="btn btn-primary mx-1 my-5", @style="float left"})
                @Html.ActionLink("Add To Cart", "AddToCart","Cart", new {  productsid=item.Id },new{@class="btn btn-info mx-1 my-5",@style="float: left;"})
            </div>
            <div class="col-1"></div>
        </div>
        <hr />
    }

}